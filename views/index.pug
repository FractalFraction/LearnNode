extends layout.pug

block content
    h1#message= message
    //- Store the data array returned from the get request
    //- Iterate over each object in the array using each 
    //- book data is returned from GET request
    div.bookshelf
      var- myBookData= bookData
      each book in myBookData
        div.book
          div.description
            p#title #{book.title}
            p#author By: #{book.author} 
            p#price Price: #{book.price} 
            if book.amount >= 10
              p#amount In Stock
            else if book.amount > 0
              p#amount Running Low - Only #{book.amount} remaining!
            else 
              p#amount Out of Stock 